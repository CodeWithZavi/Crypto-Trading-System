# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these in your hosting platform (Vercel/Render/Railway)

# Server Port
PORT=5000

# MongoDB Connection String
# Local: mongodb://127.0.0.1:27017/crypto-trading-db
# Production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://127.0.0.1:27017/crypto-trading-db

# JWT Secret Key (Generate a secure random string for production)
JWT_SECRET=supersecretkey123

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Node Environment
NODE_ENV=development
